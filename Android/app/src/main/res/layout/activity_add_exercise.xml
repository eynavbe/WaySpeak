<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ui.home.AddExerciseActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="הוספת תוכנית תרגילים"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/eilDateStart"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etDateStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@color/grey"
            android:gravity="center"

            android:text="בחירת תאריך התחלה..."
            android:padding="8dp"
            android:textSize="14sp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/eilDateEnd"

        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etDateEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@color/grey"
            android:gravity="center"

            android:text="בחירת תאריך סיום..."
            android:padding="8dp"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"

            android:orientation="vertical" >
            <Button
                android:id="@+id/btnSaveExercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="שמור" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:orientation="vertical" >
            <Button
                android:id="@+id/btnCancelationExercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ביטול" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"

        android:text="בחירת סוגי תרגילים" />

    <ScrollView android:layout_marginTop="20dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

        android:id="@+id/scrollView"
        tools:ignore="MissingConstraints">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/stIndexOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:hint="מספור בסדר פעולות" />
            <EditText
                android:id="@+id/etCountOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"

                android:inputType="number"
                android:hint="כמות ביצוע התרגיל" />
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"

                android:text="פתיחת פה: "/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/stIndexClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:hint="מספור בסדר פעולות" />
            <EditText
                android:id="@+id/etCountClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"

                android:inputType="number"
                android:hint="כמות ביצוע התרגיל" />
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"

                android:text="סגירת פה: "/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/stIndexSmile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:hint="מספור בסדר פעולות" />
            <EditText
                android:id="@+id/etCountSmile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"

                android:inputType="number"
                android:hint="כמות ביצוע התרגיל" />
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"

                android:text="חיוך: "/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/stIndexPursing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:hint="מספור בסדר פעולות" />
            <EditText
                android:id="@+id/etCountPursing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"

                android:inputType="number"
                android:hint="כמות ביצוע התרגיל" />
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"

                android:text="כיווץ שפתיים: "/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/stIndexTongueOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:hint="מספור בסדר פעולות" />
            <EditText
                android:id="@+id/etCountTongueOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"

                android:inputType="number"
                android:hint="כמות ביצוע התרגיל" />

            <TextView



                 android:text="הוצאה לשון ישר"
                 android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/stIndexMoveTongueRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:hint="מספור בסדר פעולות" />
            <EditText
                android:id="@+id/etCountMoveTongueRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"

                android:inputType="number"
                android:hint="כמות ביצוע התרגיל" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="תזוזה לשון ימינה: "
                android:textColor="@color/black"
                android:textSize="14sp"

                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/stIndexMoveTongueLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:hint="מספור בסדר פעולות" />
            <EditText
                android:id="@+id/etCountMoveTongueLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"

                android:inputType="number"
                android:hint="כמות ביצוע התרגיל" />
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"

                android:text="תזוזה לשון שמאלה: "/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/stIndexLiftTongueNose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:hint="מספור בסדר פעולות" />
            <EditText
                android:id="@+id/etCountLiftTongueNose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"

                android:inputType="number"
                android:hint="כמות ביצוע התרגיל" />
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"

                android:text="הרמה לשון לאף: "/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/stIndexLowerTongueChin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"

                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:hint="מספור בסדר פעולות" />
            <EditText
                android:id="@+id/etCountLowerTongueChin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"

                android:inputType="number"
                android:hint="כמות ביצוע התרגיל" />
            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"

                android:text="הורדה לשון לסנטר: "/>


        </LinearLayout>

    </LinearLayout>

</ScrollView>




</LinearLayout>
